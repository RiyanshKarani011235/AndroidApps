<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ~~~~~~~~~ card_layout.xml styles ~~~~~~~~~~~~~ -->

    <style name="CardLayout_background">
        <item name="android:minHeight">180dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="CardLayout_image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="CardLayout_name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#7F212121</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardLayout_descriptionText">
        <item name="android:layout_margin">6dp</item>

    </style>

    <style name="CardLayout_seeMore">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="CardLayout_getDirections">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#29B6F6</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~ activity_show_more_layout.xml ~~~~~~~~ -->

    <style name="ActivityShowMoreLayout_image_name_relative_layout">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="ActivityShowMoreLayout_image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">300dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ActivityShowMoreLayout_name">
        <item name="android:background">#7F212121</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="ActivityShowMoreLayout_description_text">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

</resources>
